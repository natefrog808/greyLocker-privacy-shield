{
  "manifest_version": 3,
  "name": "GreyLocker Privacy Shield",
  "version": "1.0.0",
  "description": "A privacy-focused browser extension for Megapixel Core NFT holders",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "scripting",
    "notifications",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_title": "GreyLocker Privacy Shield"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
  "16": "assets/icons/generate-icons.svg",
  "48": "assets/icons/generate-icons.svg",
  "128": "assets/icons/generate-icons.svg"
}
  "web_accessible_resources": [
    {
      "resources": ["lib/*", "assets/*", "dashboard/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
